<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="0.2.0-1" author="inalkar">

        <createTable tableName="USER">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="blob">
                <constraints nullable="false"/>
            </column>
            <column name="salt" type="blob">
                <constraints nullable="false"/>
            </column>
            <column name="firstName" type="varchar(126)"/>
            <column name="lastName" type="varchar(126)"/>
            <column name="active" type="boolean" defaultValueBoolean="true"/>
        </createTable>

        <createTable tableName="ROLE">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="USERROLES">
            <column name="userid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="roleid" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="USER"/>
            <dropTable tableName="ROLE"/>
            <dropTable tableName="USERROLES"/>
        </rollback>

    </changeSet>

</databaseChangeLog>